@model FoodHealthModulo1Final.ViewModels.PurchaseView

@{
    ViewBag.Title = "NewPackage";
}

<header class="masthead">
    <div class="container d-flex h-100 align-items-center">
        <div class="container-fluid rounded" style="background-color: #F5F5F5 ; margin-top: 40px">
            @using (Html.BeginForm("NewPackage", "Purchase", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h4 style="padding-top:30px">Crear paquete</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div style="padding-top:30px" class="form-group">
                        @Html.LabelFor(model => model.Customer.CustomerId, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("CustomerId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Customer.CustomerId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar Paquete" id="NewPlato" class="btn btn-success" />
                            @Html.ActionLink("Agregar Paquete", "AddPackage", new { }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>

            }
            <h3 class="text-danger">@ViewBag.Error</h3>
            <h3 class="text-success">@ViewBag.Message</h3>
            <h3> Detalle de orden</h3>
            <div class="table-responsive-lg">
                <table class="table  table-striped table-dark table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PackagePurchase.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PackagePurchase.Quantity)
                        </th>

                        <th></th>
                    </tr>
                    @for (int i = 0; i < Model.PackagePurchase1.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.PackagePurchase1[i].Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.PackagePurchase1[i].Quantity)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = Model.PackagePurchase1[i].PackageID }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Borrar", "Delete", new { id = Model.PackagePurchase1[i].PackageID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</header>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}