@model IEnumerable<FoodHealthModulo1Final.Models.Profiles.Employee>

@{
    ViewBag.Title = "Index";
}

<header class="masthead">
    <div class="container d-flex h-100 align-items-center">

        <div class="container-fluid">

            <p style="padding-top:80px">
                @Html.ActionLink("Crear empleado", "Create", new { }, new { @class = "btn btn-success" })
            </p>
            <div class="table-responsive-xl">
                <table class="table  table-striped table-dark table-bordered" style="width:300px; margin-right:30px">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Role.RoleName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.EmployeId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.EmployeId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Borrar", "Delete", new { id = item.EmployeId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</header>